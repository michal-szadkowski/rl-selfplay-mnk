{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "uv",
            "args": ["run", "${file}"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Current File as Module",
            "type": "debugpy",
            "request": "launch",
            "program": "uv",
            "args": ["run", "-m", "${fileDirname}/${fileBasenameNoExtension}"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}