{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Current File as Module",
            "type": "debugpy",
            "request": "launch",
            "module": "${fileDirname}/${fileBasenameNoExtension}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Vector MNK Environment",
            "type": "debugpy",
            "request": "launch",
            "module": "src.tests.debug_vector_mnk_env",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Vector MNK Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "src/tests/test_vector_mnk_env.py",
                "-v"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}